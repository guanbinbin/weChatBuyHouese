 <!--引入自定义组价。'navbar-data'中navbar是自定义名字，决定了组件中'navbarData'的名字-->
<nav-bar navbar-data='{{nvabarData}}'></nav-bar>
<scroll-view class="position_re" style='margin-top: {{height}}px'>
<view>
<swiper class='houseSwiper' indicator-dots="{{swiper.indicatorDots}}"
  autoplay="{{swiper.autoplay}}" interval="{{swiper.interval}}" duration="{{swiper.duration}}">
  <block wx:for="{{swiper.imgUrls}}" wx:key="that">
    <swiper-item class="swiper_box">
      <image src="{{item}}" class="slide-image swiper_img" width="100%" height="150"/>
    </swiper-item>
  </block>
</swiper>
<view class='detailPart'>
<view>
<text class='block price bold font16'>{{houseDetail.price}}</text>
<text class='block font14'>{{houseDetail.title}}</text>
</view>
<view class='divLine'></view>

<view class='flexBox justify'>
<view><text class='block font14'>{{houseDetail.room}}</text>
<text class='block font12 gray'>房型</text></view>
<view><text class='block font14'>{{houseDetail.floor}}</text>
<text class='block font12 gray'>楼层</text></view>
<view><text class='block font14'>{{houseDetail.size}}m<text class="sup">2</text></text>
<text class='block font12 gray'>面积</text></view>
<view><text class='block font14'>{{houseDetail.right}}</text>
<text class='block font12 gray'>房产权属</text></view>
</view>
<view class='divLine'></view>
<view class='tag flexBox wrap' style='width:70%'>
<text class='subTitle space m_b_10' wx:for="{{houseDetail.subTitle}}">{{item}}</text>
</view>
<view class='divLine'></view>
<view class='distribution' style="margin-bottom:{{contactHeight}}vh">
<text class='block font14 m_b_10 bold'>房屋描述</text>
<view wx:for="{{houseDetail.distribution}}" style="line-height:50rpx">
<text class='block font12 gray1' style='color:#70C677'>{{item.title}}</text>
<text class='block font12'>{{item.content}}</text>
</view>
</view>
</view>
</view>
<view class='position_f contact flexBox align' style="height:{{contactHeight}}vh">
<view style='width:15%'>
<image class="userinfo-avatar" src="{{salerInfo.image}}" background-size="cover"></image>
</view>
<view style='width:30%;text-align:left'>
<text class='block font14'>{{salerInfo.name}}</text>
<text class='block font12 gray'>{{salerInfo.name}}</text>
</view>
<view style='width:55%;'>
<button class='font14 btn inline' style="margin-right:10rpx" size="20" type='primary'>在线咨询</button>
<button class='font14 btn inline' type='primary'>电话咨询</button>
</view>
</view>
</scroll-view>
